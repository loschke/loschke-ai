---
// src/components/blog/CategoryTeaser.astro
import { Image } from 'astro:assets';
import howToPromptGuide from '../../assets/guides/how-to-prompt-guide.png';
import aiDesignGuide from '../../assets/guides/ai-design-guide.png';

interface Props {
  categories: string[];
}

const { categories = [] } = Astro.props;

// Hauptkategorie ermitteln (erste in der Liste)
const mainCategory = categories[0] || "";

// Teaser-Daten basierend auf der Kategorie
let teaser = null;

switch(mainCategory) {
  case "Prompt Engineering":
    teaser = {
      title: "How-to-Prompt Guide",
      description: "Systematisches Framework f√ºr effektive KI-Kommunikation und optimale Ergebnisse mit ChatGPT & Co.",
      icon: "üìù", // Emoji statt Bild
      href: "/how-to-prompt-guide",
      color: "from-[#2a4858] to-[#162a36]",
      type: "guide"
    };
    break;
  case "KI-Transformation":
    teaser = {
      title: "next:move.ai",
      description: "Die Agenturen queonext und move:elevator, bieten Unternehmen einen praxisnahen Einstieg in die KI-Transformation. Mit einem Fokus auf Marketing-Anwendungen bieten wir Beratung, Workshops und eine spezialisierte KI-Toolbox.",
      icon: "üöÄ", // Raketen-Emoji wie gew√ºnscht
      href: "https://next-move.ai",
      color: "from-[#3a3a59] to-[#232339]",
      type: "project",
      external: true
    };
    break;
  case "KI-Strategie":
    teaser = {
      title: "queonext AI",
      description: "Als Director Automation & AI entwickle ich gemeinsam mit unserem Team KI-Strategien und setzen diese in konkrete L√∂sungen um. Wir integrieren generative KI in deine Unternehmensprozesse und gestalten die digitale Transformation.",
      icon: "üöÄ", // Raketen-Emoji wie gew√ºnscht
      href: "https://queonext.de/ai",
      color: "from-[#4a3c59] to-[#2a1c39]",
      type: "project",
      external: true
    };
    break;
  case "AI-Design":
    teaser = {
      title: "AI-Design Guide",
      description: "Leitfaden f√ºr AI-Design & AI-Fotografie: Lerne, gestalte und realisiere beeindruckende KI-generierte Bilder.",
      icon: "üé®", // Emoji statt Bild
      href: "https://ai-design.guide/",
      color: "from-[#005461] to-[#003049]",
      type: "guide",
      external: true
    };
