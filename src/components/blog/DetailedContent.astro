---
interface Props {
  className?: string;
}

const { className = "" } = Astro.props;
---

<div class={`detailed-content ${className}`} data-section-depth="3">
  <slot />
</div>

<style>
  .detailed-content {
    position: relative;
    border-left: 3px solid rgba(139, 92, 246, 0.2);
    padding-left: 1rem;
    margin-bottom: 1rem;
  }
</style>
