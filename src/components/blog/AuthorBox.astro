---
// src/components/blog/AuthorBox.astro
import { Picture } from "astro:assets";
import SocialIcons from "../navigation/SocialIcons.astro";

interface Props {
    name?: string;
    avatar?: string;
    position?: string;
    bio?: string;
}

const { 
    name = "Rico Loschke", 
    avatar = "/images/rico-loschke_avatar.jpg",
    position = "Director Automation & AI bei queonext",
    bio = "Als KI-Experte verbinde ich technisches Know-how mit der Leidenschaft, Menschen den Weg in die KI-gestützte Zukunft zu ebnen. Seit 2021 beschäftige ich mich intensiv mit KI-Technologien und helfe Unternehmen, diese sinnvoll einzusetzen."
} = Astro.props;
---

<div class="author-box mt-12 p-6 bg-white/5 backdrop-blur-sm rounded-xl border border-white/10">
    <div class="flex flex-col sm:flex-row items-center sm:items-start gap-6">
        <div class="shrink-0">
            <Picture
                src={avatar}
                alt={name}
                width={100}
                height={100}
                formats={["avif", "webp"]}
                fallbackFormat="jpg"
                class="rounded-full border-2 border-white/10"
            />
        </div>
        <div class="flex-1 text-center sm:text-left">
            <h3 class="text-xl font-bold mb-1">{name}</h3>
            {position && <p class="text-white/70 text-sm mb-3">{position}</p>}
            {bio && <p class="text-white/80 text-sm mb-4 leading-relaxed">{bio}</p>}
            
            <div class="flex justify-center sm:justify-start">
                <SocialIcons />
            </div>
        </div>
    </div>
</div>
