---
interface Props {
  className?: string;
}

const { className = "" } = Astro.props;
---

<div class={`standard-content ${className}`} data-section-depth="2">
  <slot />
</div>

<style>
  .standard-content {
    position: relative;
    border-left: 3px solid rgba(16, 185, 129, 0.4);
    padding-left: 1rem;
    margin-bottom: 1rem;
  }
</style>
