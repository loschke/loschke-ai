---
interface Props {
  category: string;
  subcategory: string;
}

const { category, subcategory } = Astro.props;

// Map category keys to display names
const categoryNames = {
  "einfuehrung": "Einführung",
  "framework": "Framework",
  "komponenten": "Komponenten",
  "ressourcen": "Ressourcen"
};

// Map subcategory keys to display names
const subcategoryNames = {
  // Einführung
  "ki-grundlagen": "KI-Grundlagen",
  "prompting-grundlagen": "Prompting-Grundlagen",
  
  // Framework
  "prompt-framework": "Das Prompt Framework",
  
  // Komponenten
  "expertenrolle": "Expertenrolle",
  "aufgabenstellung": "Aufgabenstellung",
  "kontext": "Kontext",
  "ausdruck": "Ausdruck",
  "format": "Format",
  "dialog-followups": "Dialog & Follow-ups",
  
  // Ressourcen
  "prompt-bibliothek": "Wie du eine effektive Prompt-Bibliothek aufbaust",
  "ethik-compliance": "Ethik & Compliance im KI-Marketing",
  "ki-content-verbessern": "So verbesserst du KI-generierten Content",
  "ki-prompt-experimente": "5 unkonventionelle Prompt-Experimente für kreative Durchbrüche",
  "prompt-fehlerbehebung": "Troubleshooting: Die häufigsten Prompt-Probleme lösen",
  "prompt-glossar": "Das ultimative Prompt-Glossar",
  "zukunftssichere-strategien": "Zukunftssichere Prompt-Strategien entwickeln"
};

const categoryName = categoryNames[category as keyof typeof categoryNames] || category;
const subcategoryName = subcategoryNames[subcategory as keyof typeof subcategoryNames] || subcategory;
---

<nav class="sticky top-[94px] z-30 bg-gray-800 backdrop-blur-sm border-b border-white/10">
  <div class="container mx-auto px-4 py-3">
    <div class="flex items-center gap-3 text-sm">
      <a href="/how-to-prompt-guide" class="flex items-center gap-2 text-gray-200 hover:text-blue-300 transition-colors group">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 group-hover:-translate-x-0.5 transition-transform" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3 12h18M3 12L9 6m-6 6l6 6"/>
        </svg>
        <span>Übersicht</span>
      </a>
      <span class="text-white/40">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5" />
        </svg>
      </span>
      <a href="/how-to-prompt-guide" class="text-white/70 hover:text-white transition-colors px-2 py-1 rounded hover:bg-white/5">
        {categoryName}
      </a>
      <span class="text-white/40">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5" />
        </svg>
      </span>
      <span class="text-white font-medium px-2 py-1 bg-white/5 rounded">
        {subcategoryName}
      </span>
    </div>
  </div>
</nav>
