---
interface Props {
  className?: string;
}

const { className = "" } = Astro.props;
---

<div class={`base-content ${className}`} data-section-depth="1">
  <slot />
</div>

<style>
  .base-content {
    position: relative;
    background-color: rgba(59, 130, 246, 0.04);
    padding: 0.75rem 1rem;
    margin-bottom: 1rem;
    border-radius: 0.25rem;
  }
  
  .base-content:hover {
    background-color: rgba(59, 130, 246, 0.07);
  }
</style>

<script>
  // Ensure base content is always visible
  document.addEventListener('astro:page-load', () => {
    const baseContents = document.querySelectorAll<HTMLElement>('.base-content');
    baseContents.forEach(content => {
      content.style.display = 'block';
    });
  });
</script>
