---
import Layout from "../layouts/Layout.astro";
import OptimizedImage from "../components/ui/OptimizedImage.astro";

// Bilder importieren
import howToPromptGuide from "../assets/guides/how-to-prompt-guide.png";
import promptBibliothek from "../assets/guides/prompt-bibliothek.png";
import aiDesignGuide from "../assets/guides/ai-design-guide.png";
import aiDesignModifier from "../assets/guides/ai-design-modifier.png";

// Bildmap erstellen
const imageMap = {
    "/images/how-to-prompt-guide.png": howToPromptGuide,
    "/images/prompt-bibliothek.png": promptBibliothek,
    "/images/ai-design-guide.png": aiDesignGuide,
    "/images/ai-design-modifier.png": aiDesignModifier
};
---

<Layout
    title="KI Guides & Tutorials | Prompt Engineering & AI-Design | Rico Loschke"
    description="✓ Kostenlose KI-Anleitungen für Prompt Engineering, ChatGPT & AI-Design ✓ Praxisnahe Frameworks & Übungen ✓ Von KI-Experte Rico Loschke ➤ Jetzt entdecken!"
>
    <section class="container-padding mt-20">
        <div class="max-container">
            <h1 class="text-4xl md:text-5xl font-bold mb-8">Meine KI Guides</h1>
            <p class="text-xl mb-12 max-w-3xl">
                Entdecke praxisnahe Anleitungen und Tutorials, die dir
                helfen, KI-Technologien besser zu verstehen und erfolgreich
                einzusetzen.
            </p>

            <!-- Abschnitt 1: Prompting & Chat Assistenten -->
            <div class="mb-16">
                <h2 class="text-3xl font-bold mb-6">Prompting & Chat Assistenten</h2>

                
                <div class="grid gap-8 md:grid-cols-2 mb-8">
                    <!-- How-to-Prompt Guide -->
                    <article
                        class="bg-white dark:bg-gray-800 rounded-xl overflow-hidden border border-gray-200 dark:border-gray-700 shadow-lg hover:shadow-xl transition-all"
                    >
                        <div
                            class="aspect-video bg-gradient-to-br from-[#2a4858] to-[#162a36] overflow-hidden"
                        >
                            <OptimizedImage 
                                src={imageMap["/images/how-to-prompt-guide.png"]} 
                                alt="How-to-Prompt Guide" 
                                className="w-full h-full object-cover"
                            />
                        </div>
                        <div class="p-6">
                            <div
                                class="flex items-center gap-2 text-sm text-white/60 mb-4"
                            >
                                <span class="px-3 py-1 bg-primary/10 rounded-full"
                                    >Prompt Crafting</span
                                >
                                <span class="px-3 py-1 bg-primary/10 rounded-full"
                                    >Chat Assistenten</span
                                >
                            </div>
                            <h3 class="text-2xl font-bold mb-4">
                                How-to-Prompt Guide
                            </h3>
                            <p class="text-white/80 mb-6">
                                Systematisches Framework für effektive KI-Kommunikation und optimale Ergebnisse mit ChatGPT & Co.
                            </p>
                            <a
                                href="/how-to-prompt-guide"
                                class="inline-flex items-center px-4 py-2 bg-primary text-white rounded-md hover:bg-primary-light transition-colors"
                            >
                                Zum Guide
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    class="h-4 w-4 ml-2"
                                    viewBox="0 0 20 20"
                                    fill="currentColor"
                                >
                                    <path
                                        fill-rule="evenodd"
                                        d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z"
                                        clip-rule="evenodd"></path>
                                </svg>
                            </a>
                        </div>
                    </article>
                    
                    <!-- Prompt-Bibliothek -->
                    <article
                        class="bg-white dark:bg-gray-800 rounded-xl overflow-hidden border border-gray-200 dark:border-gray-700 shadow-lg hover:shadow-xl transition-all"
                    >
                        <div
                            class="aspect-video bg-gradient-to-br from-[#4a3c59] to-[#2a1c39] overflow-hidden"
                        >
                            <OptimizedImage 
                                src={imageMap["/images/prompt-bibliothek.png"]} 
                                alt="Prompt-Bibliothek" 
                                className="w-full h-full object-cover"
                            />
                        </div>
                        <div class="p-6">
                            <div
                                class="flex items-center gap-2 text-sm text-white/60 mb-4"
                            >
                                <span class="px-3 py-1 bg-primary/10 rounded-full"
                                    >Prompt Engineering</span
                                >
                                <span class="px-3 py-1 bg-primary/10 rounded-full"
                                    >Marketing</span
                                >
                            </div>
                            <h3 class="text-2xl font-bold mb-4">
                                Prompt-Bibliothek
                            </h3>
                            <p class="text-white/80 mb-6">
                                Kuratierte Sammlung von Prompts für Marketing, PR und Vertrieb - sofort einsetzbar und anpassbar.
                            </p>
                            <a
                                href="/prompt-bibliothek"
                                class="inline-flex items-center px-4 py-2 bg-primary text-white rounded-md hover:bg-primary-light transition-colors"
                            >
                                Zur Bibliothek
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    class="h-4 w-4 ml-2"
                                    viewBox="0 0 20 20"
                                    fill="currentColor"
                                >
                                    <path
                                        fill-rule="evenodd"
                                        d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z"
                                        clip-rule="evenodd"></path>
                                </svg>
                            </a>
                        </div>
                    </article>
                </div>

                <!-- Teaser Banner für Übungsaufgaben -->
                <div class="bg-gray-100 dark:bg-gray-800/60 border border-gray-200 dark:border-gray-700 rounded-xl overflow-hidden shadow-md mb-8">
                    <div class="p-6 md:p-8 flex flex-col md:flex-row items-center justify-between">
                        <div class="mb-6 md:mb-0 md:mr-6">
                            <h3 class="text-2xl font-bold mb-3">KI-Übungsaufgaben</h3>
                            <p class="text-gray-600 dark:text-gray-300 mb-4">
                                Praktische Übungen mit unterschiedlichen Schwierigkeitsgraden, um deine Prompt-Engineering-Fähigkeiten zu verbessern.
                            </p>
                            
                            <div class="flex flex-wrap gap-2 mt-3">
                                <a href="/aufgaben/bildung-schule" class="inline-flex items-center px-3 py-1 bg-green-100 dark:bg-green-900/30 text-green-800 dark:text-green-300 text-sm font-medium rounded-full">
                                    Bildung & Schule
                                </a>
                                <a href="/aufgaben/wissenschaft" class="inline-flex items-center px-3 py-1 bg-blue-100 dark:bg-blue-900/30 text-blue-800 dark:text-blue-300 text-sm font-medium rounded-full">
                                    Wissenschaftskommunikation
                                </a>
                                <span class="inline-flex items-center px-3 py-1 bg-gray-100 dark:bg-gray-700 text-gray-600 dark:text-gray-300 text-sm font-medium rounded-full">
                                    Projektmanagement <span class="ml-1 text-xs bg-gray-200 dark:bg-gray-600 px-1.5 py-0.5 rounded">soon</span>
                                </span>
                                <span class="inline-flex items-center px-3 py-1 bg-gray-100 dark:bg-gray-700 text-gray-600 dark:text-gray-300 text-sm font-medium rounded-full">
                                    Anwendungsentwicklung <span class="ml-1 text-xs bg-gray-200 dark:bg-gray-600 px-1.5 py-0.5 rounded">soon</span>
                                </span>
                                <span class="inline-flex items-center px-3 py-1 bg-gray-100 dark:bg-gray-700 text-gray-600 dark:text-gray-300 text-sm font-medium rounded-full">
                                    Marketing <span class="ml-1 text-xs bg-gray-200 dark:bg-gray-600 px-1.5 py-0.5 rounded">soon</span>
                                </span>
                            </div>
                        </div>
                        <a href="/aufgaben" class="inline-flex items-center px-5 py-2.5 bg-primary text-white font-normal rounded-md hover:bg-primary-light transition-colors whitespace-nowrap">
                            Zu den Übungen
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-2" viewBox="0 0 20 20" fill="currentColor">
                                <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                            </svg>
                        </a>
                    </div>
                </div>
            </div>
            
            <!-- Abschnitt 2: AI-Design & AI-Fotografie -->
            <div>
                <h2 class="text-3xl font-bold mb-6">AI-Design & AI-Fotografie</h2>
                
                <div class="grid gap-8 md:grid-cols-2 mb-8">
                    <!-- AI-Design Guide (External) -->
                    <article
                        class="bg-white dark:bg-gray-800 rounded-xl overflow-hidden border border-gray-200 dark:border-gray-700 shadow-lg hover:shadow-xl transition-all"
                    >
                        <div
                            class="aspect-video bg-gradient-to-br from-[#005461] to-[#003049] overflow-hidden"
                        >
                            <OptimizedImage 
                                src={imageMap["/images/ai-design-guide.png"]} 
                                alt="AI-Design Guide" 
                                className="w-full h-full object-cover"
                            />
                        </div>
                        <div class="p-6">
                            <div
                                class="flex items-center gap-2 text-sm text-white/60 mb-4"
                            >
                                <span class="px-3 py-1 bg-primary/10 rounded-full"
                                    >AI-Design</span
                                >
                                <span class="px-3 py-1 bg-primary/10 rounded-full"
                                    >4K Framework</span
                                >
                            </div>
                            <h3 class="text-2xl font-bold mb-4">
                                AI-Design Guide
                            </h3>
                            <p class="text-white/80 mb-6">
                                Leitfaden für AI-Design & AI-Fotografie: Lerne, gestalte und realisiere beeindruckende KI-generierte Bilder.
                            </p>
                            <a
                                href="https://ai-design.guide/"
                                target="_blank"
                                rel="noopener noreferrer"
                                class="inline-flex items-center px-4 py-2 bg-primary text-white rounded-md hover:bg-primary-light transition-colors"
                            >
                                Zum Guide
                                <svg 
                                    xmlns="http://www.w3.org/2000/svg" 
                                    class="h-4 w-4 ml-2" 
                                    viewBox="0 0 20 20" 
                                    fill="currentColor"
                                >
                                    <path d="M11 3a1 1 0 100 2h2.586l-6.293 6.293a1 1 0 101.414 1.414L15 6.414V9a1 1 0 102 0V4a1 1 0 00-1-1h-5z" />
                                    <path d="M5 5a2 2 0 00-2 2v8a2 2 0 002 2h8a2 2 0 002-2v-3a1 1 0 10-2 0v3H5V7h3a1 1 0 000-2H5z" />
                                </svg>
                            </a>
                        </div>
                    </article>

                    <!-- AI-Design Modifiers -->
                    <article
                        class="bg-white dark:bg-gray-800 rounded-xl overflow-hidden border border-gray-200 dark:border-gray-700 shadow-lg hover:shadow-xl transition-all"
                    >
                        <div
                            class="aspect-video bg-gradient-to-br from-[#3a3a59] to-[#232339] overflow-hidden"
                        >
                            <OptimizedImage 
                                src={imageMap["/images/ai-design-modifier.png"]} 
                                alt="AI-Design Modifiers" 
                                className="w-full h-full object-cover"
                            />
                        </div>
                        <div class="p-6">
                            <div
                                class="flex items-center gap-2 text-sm text-white/60 mb-4"
                            >
                                <span class="px-3 py-1 bg-primary/10 rounded-full"
                                    >Bildgenerierung</span
                                >
                                <span class="px-3 py-1 bg-primary/10 rounded-full"
                                    >Modifiers</span
                                >
                            </div>
                            <h3 class="text-2xl font-bold mb-4">
                                AI-Design Modifiers
                            </h3>
                            <p class="text-white/80 mb-6">
                                Sammlung von Prompt-Modifiers für beeindruckende KI-generierte Bilder mit Midjourney, Flux, Ideogram und mehr.
                            </p>
                            <a
                                href="/ai-design-framework"
                                class="inline-flex items-center px-4 py-2 bg-primary text-white rounded-md hover:bg-primary-light transition-colors"
                            >
                                Zur Bibliothek
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    class="h-4 w-4 ml-2"
                                    viewBox="0 0 20 20"
                                    fill="currentColor"
                                >
                                    <path
                                        fill-rule="evenodd"
                                        d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z"
                                        clip-rule="evenodd"></path>
                                </svg>
                            </a>
                        </div>
                    </article>
                </div>

                <!-- Teaser Banner für Design-Übungsaufgaben -->
                <div class="bg-gray-100 dark:bg-gray-800/60 border border-gray-200 dark:border-gray-700 rounded-xl overflow-hidden shadow-md mb-8">
                    <div class="p-6 md:p-8 flex flex-col md:flex-row items-center justify-between">
                        <div class="mb-6 md:mb-0 md:mr-6">
                            <h3 class="text-2xl font-bold mb-3">4K Framework Übungsaufgaben</h3>
                            <p class="text-gray-600 dark:text-gray-300 mb-4">
                                Praktische Übungen zur Anwendung des 4K Frameworks für AI-Design & AI-Fotografie. Lerne Schritt für Schritt, wie du beeindruckende KI-generierte Bilder erstellst.
                            </p>
                            
                            <div class="flex flex-wrap gap-2 mt-3">
                                <span class="inline-flex items-center px-3 py-1 bg-blue-100 dark:bg-blue-900/30 text-blue-800 dark:text-blue-300 text-sm font-medium rounded-full">
                                    Basismotive
                                </span>
                                <span class="inline-flex items-center px-3 py-1 bg-purple-100 dark:bg-purple-900/30 text-purple-800 dark:text-purple-300 text-sm font-medium rounded-full">
                                    Konzept
                                </span>
                                <span class="inline-flex items-center px-3 py-1 bg-green-100 dark:bg-green-900/30 text-green-800 dark:text-green-300 text-sm font-medium rounded-full">
                                    Kontext
                                </span>
                                <span class="inline-flex items-center px-3 py-1 bg-orange-100 dark:bg-orange-900/30 text-orange-800 dark:text-orange-300 text-sm font-medium rounded-full">
                                    Komposition
                                </span>
                                <span class="inline-flex items-center px-3 py-1 bg-red-100 dark:bg-red-900/30 text-red-800 dark:text-red-300 text-sm font-medium rounded-full">
                                    Kreativität
                                </span>
                            </div>
                        </div>
                        <a href="/designaufgaben" class="inline-flex items-center px-5 py-2.5 bg-primary text-white font-normal rounded-md hover:bg-primary-light transition-colors whitespace-nowrap">
                            Zu den Übungen
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-2" viewBox="0 0 20 20" fill="currentColor">
                                <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                            </svg>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>
</Layout>
